# Server Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Server Configuration
PORT=5000
NODE_ENV=production

# Database
MONGO_URI=mongodb://localhost:27017/yansy
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/yansy

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Client URL (for CORS and Socket.io)
# Single: https://yansytech.com
# Multiple (dev + prod): https://yansytech.com,http://localhost:5173,http://127.0.0.1:5173
CLIENT_URL=https://yansytech.com,http://localhost:5173,http://127.0.0.1:5173

# Optional: Cloud Storage Provider
# CLOUD_PROVIDER=cloudinary
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret
